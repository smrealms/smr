{
	"name": "smr/smr",
	"description": "SMR",
	"license": "AGPL-3.0",
	"require": {
		"abraham/twitteroauth": "^2.0",
		"ext-curl": "*",
		"ext-json": "*",
		"ext-mysqli": "*",
		"facebook/graph-sdk": "^5.5.0",
		"google/recaptcha": "^1.1",
		"php": "^7.4",
		"php-di/php-di": "6.3.0",
		"phpmailer/phpmailer": "^6.1",
		"team-reflex/discord-php": "5.1.0",
		"vanilla/nbbc": "^2.0",
		"vlucas/phpdotenv": "^5.2.0"
	},
	"autoload": {
		"psr-4": {
			"Smr\\": "src/lib/Smr/"
		}
	},
	"scripts": {
		"start:dev": "docker-compose up --build -d traefik smr-dev",
		"start:integration-services": [
			"docker-compose --env-file test.env up -d mysql-integration-test",
			"sleep 20",
			"docker-compose --env-file test.env run --rm flyway-integration-test"
		],
		"stop" : [
			"docker-compose stop",
			"docker-compose rm --force"
		],
		"test": "docker-compose --env-file test.env run --rm smr-integration-test",
		"rebuild:dev": [
			"@stop",
			"@start:dev"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"SmrTest\\": "test/SmrTest/"
		}
	},
	"require-dev": {
		"phpunit/phpunit": "9.5.0"
	}
}
