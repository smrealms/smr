{
	"name": "smr/smr",
	"description": "SMR",
	"license": "AGPL-3.0",
	"require": {
		"abraham/twitteroauth": "^1.0",
		"ext-curl": "*",
		"ext-json": "*",
		"ext-mysqli": "*",
		"facebook/graph-sdk": "^5.5.0",
		"google/recaptcha": "^1.1",
		"php": "^7.4",
		"phpmailer/phpmailer": "^6.1",
		"vanilla/nbbc": "^2.0",
		"vlucas/phpdotenv": "^v5.2.0",
		"php-di/php-di": "6.3.0"
	},
	"autoload": {
		"psr-0": {
			"Smr\\": "lib/"
		}
	},
	"scripts": {
		"test": "vendor/bin/phpunit test",
		"start:dev": "docker-compose up --build -d traefik smr-dev",
		"start:integration": [
			"docker-compose up -d mysql-integration-test",
			"sleep 10",
			"docker-compose run --rm flyway-integration-test"
		],
		"stop": [
			"docker-compose stop",
			"docker-compose rm --force"
		],
		"rebuild": [
			"@stop",
			"@start:dev"
		]
	},
	"autoload-dev": {
		"psr-0": {
			"SmrTest\\": "test/"
		}
	},
	"require-dev": {
		"phpunit/phpunit": "9.4.2"
	}
}
