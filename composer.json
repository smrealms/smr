{
	"name": "smr/smr",
	"description": "SMR",
	"license": "AGPL-3.0",
	"require": {
		"abraham/twitteroauth": "8.1.0",
		"doctrine/dbal": "4.4.1",
		"ext-curl": "*",
		"ext-json": "*",
		"ext-pdo_mysql": "*",
		"google/recaptcha": "1.3.1",
		"league/oauth2-facebook": "2.2.0",
		"league/oauth2-google": "4.0.1",
		"php": "^8.2",
		"php-di/php-di": "7.0.10",
		"phpmailer/phpmailer": "7.0.1",
		"team-reflex/discord-php": "10.41.26",
		"vanilla/nbbc": "3.0.0"
	},
	"autoload": {
		"psr-4": {
			"Smr\\": "src/lib/Smr/",
			"Smr\\Irc\\": "src/tools/irc/",
			"Smr\\Npc\\": "src/tools/npc/",
			"Smr\\Pages\\": "src/pages/"
		}
	},
	"scripts": {
		"start": [
			"docker compose up -d traefik smr"
		],
		"rebuild": [
			"docker compose up --build -d smr"
		],
		"start:test-services": [
			"docker compose --project-directory test up -d mysql",
			"@rebuild:test-services"
		],
		"reset:test-services": [
			"docker compose --project-directory test stop mysql",
			"docker compose --project-directory test rm -f -v mysql",
			"@start:test-services"
		],
		"rebuild:test-services": [
			"docker compose --project-directory test build phpunit",
			"docker compose --project-directory test run --rm flyway"
		],
		"test": [
			"@phpstan",
			"@phpunit",
			"@phpcs",
			"@rector"
		],
		"phpunit": [
			"docker compose --project-directory test run --rm phpunit"
		],
		"phpcs": [
			"docker compose --project-directory test run --rm phpcs"
		],
		"phpcbf": [
			"docker compose --project-directory test run --rm phpcbf"
		],
		"phpstan": [
			"docker compose --project-directory test run --rm phpstan"
		],
		"rector": [
			"docker compose --project-directory test run --rm rector --dry-run"
		],
		"stop": [
			"docker compose stop",
			"docker compose rm --force"
		]
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": false
		},
		"process-timeout": 0
	},
	"autoload-dev": {
		"psr-4": {
			"SmrTest\\": "test/SmrTest/"
		}
	},
	"require-dev": {
		"fig-r/psr2r-sniffer": "2.3.0",
		"overtrue/phplint": "9.7.1",
		"phpstan/phpstan": "2.1.29",
		"phpunit/phpunit": "11.5.2",
		"phpunit/php-code-coverage": "11.0.8",
		"rector/rector": "2.1.7",
		"squizlabs/php_codesniffer": "3.13.4"
	}
}
